@using FMS.Core;
@model FMS.Website.Models.VehicleOverallReportModel


<div class="opt-content clearfloat">
    <h5 class="title-page">Vehicles Report</h5>
    <a href="#!" class="btn btn-primary line" id="btnExport" title="Export To Excel" onclick="ExportXls()">
        <i class="fa fa-download"></i> Export
    </a>
</div>

<section class="content">
    @using (Html.BeginForm("ExportVehicleOverall", "RptVehiceReport", FormMethod.Post, new { @id = "ExportToXls" }))
    {
        @Html.HiddenFor(model => model.SearchViewExport.FromDate)
        @Html.HiddenFor(model => model.SearchViewExport.ToDate)
        @Html.HiddenFor(model => model.SearchViewExport.BodyType)
        @Html.HiddenFor(model => model.SearchViewExport.City)
        @Html.HiddenFor(model => model.SearchViewExport.Function)
        @Html.HiddenFor(model => model.SearchViewExport.Regional)
        @Html.HiddenFor(model => model.SearchViewExport.SupplyMethod)
        @Html.HiddenFor(model => model.SearchViewExport.VehicleStatus)
        @Html.HiddenFor(model => model.SearchViewExport.VehicleType)
        @Html.HiddenFor(model => model.SearchViewExport.Vendor)
    }
    <div class="wpanel">
        <div class="row col-md-12">
            @using (Ajax.BeginForm("ListCfmIdleVehicle", "RptVehiceReport",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contenttable",
                    OnComplete = "setupDataTables",
                }))
            {
                <div class="col-md-6">
                    <label class="control-label">End Rent</label>
                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="input-group date" id="FromDate">
                                @Html.TextBoxFor(model => model.SearchView.FromDate, "{0:dd-MMM-yyyy}", new { @class = "form-control", @placeholder = "From" })
                                <span class="input-group-addon btn btn-primary">
                                    <i class="fa fa-calendar "></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group date" id="ToDate">
                                @Html.TextBoxFor(model => model.SearchView.ToDate, "{0:dd-MMM-yyyy}", new { @class = "form-control", @placeholder = "To" })
                                <span class="input-group-addon btn btn-primary">
                                    <i class="fa fa-calendar "></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    @*<div class="col-md-6">
                            <div class="form-group">

                            </div>
                        </div>*@
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        @Html.TextBoxFor(model => model.SearchView.VehicleStatus, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Supply Method</label>
                        @Html.TextBoxFor(model => model.SearchView.SupplyMethod, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Body Type</label>
                        @Html.TextBoxFor(model => model.SearchView.BodyType, new { @class = "form-control "})
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vehicle Type</label>
                        @Html.TextBoxFor(model => model.SearchView.VehicleType, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vendor</label>
                        @Html.TextBoxFor(model => model.SearchView.Vendor, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Function</label>
                        @Html.TextBoxFor(model => model.SearchView.Function, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Regional</label>
                        @Html.TextBoxFor(model => model.SearchView.Regional, new { @class = "form-control " })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">City</label>
                        @Html.TextBoxFor(model => model.SearchView.City, new { @class = "form-control " })
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <button id="btn-filter" type="submit" class="btn btn-primary">Filter</button>
                    <button id="btn-reset" type="button" class="btn btn-default">Reset</button>
                </div>
            }
        </div>
    </div>
    <div id="contenttable" class="wpanel">
        @Html.Partial("_ListVehicleOverall")
    </div>
</section>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/Scripts/VehicleOverall.js"></script>
<script type="text/javascript">
    function ExportXls() {
        $('#SearchViewExport_FromDate').val($('#SearchView_FromDate').val());
        $('#SearchViewExport_ToDate').val($('#SearchView_ToDate').val());
       
        $('#ExportToXls').submit();
    }

    function setupDataTables() {
        // DataTable
        var table = $('#tbVehicle').DataTable({
            "dom": 'lf<"table-overflow"t>pi',
            orderCellsTop: true
        });

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });
    }

    $(document).on('click', '#btn-reset', function () {
        var todayDate = new Date();
        $('#SearchView_FromDate').val('');
        $('#SearchView_ToDate').val('');
     
        $("#btn-filter").trigger('click');
    });

    $(function () {
        setupDataTables();
    });
</script>