<script src="~/Scripts/csfscript.js"></script>
<script type="text/javascript">
    var uploaditems = [];

    function GetEmployee() {
        var Id = document.getElementById("Detail_EmployeeId").value;
        $.ajax({
            url: '@Url.Action("GetEmployee", "TraCsf")',
            type: "POST",
            dataType: "JSON",
            data: { Id: Id },
            success: function (response) {
                document.getElementById("Detail_EmployeeName").value = response.FORMAL_NAME;
                document.getElementById("Detail_CostCenter").value = response.COST_CENTER;
                document.getElementById("Detail_GroupLevel").value = response.GROUP_LEVEL;
            }
        });
    }

    $(document).ready(function () {
        $("#btnTemporaryCar").css("display", "none");

        $('#divExpectedDate').on('dp.change', function (e) {
            var expDateValue = e.date;
            var effDateValue = new Date($('#Detail_EffectiveDate').val());

            $("#btnTemporaryCar").css("display", "none");

            if (expDateValue > effDateValue) {
                $("#btnTemporaryCar").css("display", "");
            }
        });

        $('#btnUploadCsf').click(function () {
            uploadXmlFile();
        });

        $("#btnSaveProgress").click(function () {
            $('#EditForm').submit();
        });
    });

    function TemporaryCsf(value) {
        $('#TemporaryTraCsfId').val(value);
        $('#startDateId').val($('#Temporary_StartPeriod').val());
        $('#endDateId').val($('#Temporary_EndPeriod').val());
        $('#temporarymodal').modal('show');
    }

    function UploadCsf(value) {
        $('#uploadmodal').modal('show');
    }

    function uploadXmlFile() {
        var postUrl = '@Url.Action("UploadFile", "TraCsf")';
        var fileName = $('[name="itemExcelFile"]').val().trim();
        var pos = fileName.lastIndexOf('.');
        var extension = (pos <= 0) ? '' : fileName.substring(pos);
        if (extension != '.xlsx' && extension != '.csv') {
            alert('Please browse a correct excel file to upload');
            return false;
        }

        var formData = new FormData();
        var totalFiles = document.getElementById("itemExcelFile").files.length;

        for (var i = 0; i < totalFiles; i++) {
            var file = document.getElementById("itemExcelFile").files[i];
            formData.append("itemExcelFile", file);
        }

        formData.append("Detail_TraCsfId", '@Model.Detail.TraCsfId');

        $.ajax({
            type: "POST",
            url: postUrl,
            data: formData,
            dataType: 'html',
            contentType: false,
            processData: false,

            success: function (response) {
                $('#tb-body-select-vehicle-from-vendor').html('');
                uploaditems = JSON.parse(response);
                var error = "";
                for (var i = 0; i < uploaditems.length; i++) {
                    var tr = '<tr>' +
                    createColumnWithHiddenField(uploaditems[i].PoliceNumber, 'ModelVendorPoliceNumber') +
                    createColumnWithHiddenField(uploaditems[i].Manufacturer, 'ModelVendorManufacturer') +
                    createColumnWithHiddenField(uploaditems[i].Models, 'ModelVendorModels') +
                    createColumnWithHiddenField(uploaditems[i].Series, 'ModelVendorSeries') +
                    createColumnWithHiddenField(uploaditems[i].BodyType, 'ModelVendorBodyType') +
                    createColumnWithHiddenField(uploaditems[i].VendorName, 'ModelVendorVendorName') +
                    createColumnWithHiddenField(uploaditems[i].Color, 'ModelVendorColor') +
                    createColumnWithHiddenFieldDate(uploaditems[i].StartPeriodName, uploaditems[i].StartPeriodValue, 'ModelVendorStartPeriod') +
                    createColumnWithHiddenFieldDate(uploaditems[i].EndPeriodName, uploaditems[i].EndPeriodValue, 'ModelVendorEndPeriod') +
                    createColumnWithHiddenField(uploaditems[i].PoNumber, 'ModelVendorPoNumber') +
                    createColumnWithHiddenField(uploaditems[i].MessageError, 'ModelVendorMessageError') +
                    createColumnHiddenField(uploaditems[i].ChasisNumber, 'ModelVendorChasisNumber') +
                    createColumnHiddenField(uploaditems[i].EngineNumber, 'ModelVendorEngineNumber') +
                    createColumnHiddenField(uploaditems[i].IsAirBag, 'ModelVendorIsAirBag') +
                    createColumnHiddenField(uploaditems[i].Transmission, 'ModelVendorTransmission') +
                    createColumnHiddenField(uploaditems[i].Branding, 'ModelVendorBranding') +
                    createColumnHiddenField(uploaditems[i].Purpose, 'ModelVendorPurpose') +
                    createColumnHiddenField(uploaditems[i].PoLine, 'ModelVendorPoLine') +
                    createColumnHiddenField(uploaditems[i].IsVat, 'ModelVendorIsVat') +
                    createColumnHiddenField(uploaditems[i].IsRestitution, 'ModelVendorIsRestitution') +
                    '</tr>';
                    $('#tb-body-select-vehicle-from-vendor').append(tr);
                    error += uploaditems[i].MessageError;
                }

                if (error.trim() == "") {
                    $("#btnSaveProgress").css("display", "");
                }
                else {
                    $("#btnSaveProgress").css("display", "none");
                }
                
                $('#uploadmodal').modal('hide');
            }
        });
    };

    function createColumnHiddenField(text, name) {
        return '<input type="hidden" name="' + name + '" value="' + text + '">';
    }

    function createColumnWithHiddenField(text, name) {
        return '<td><input type="hidden" name="' + name + '" value="' + text + '">' + text + '</td>';
    }

    function createColumnWithHiddenFieldDate(text, value, name) {
        return '<td><input type="hidden" name="' + name + '" value="' + value + '">' + text + '</td>';
    }
</script>
