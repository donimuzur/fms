@using FMS.Core
@model FMS.Website.Models.OdometerModel

<table id="tbOdometer" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Vehicle Type</th>
            <th>Region</th>
            <th>Function</th>
            <th>Total KM</th>
            <th>Month</th>
            <th>Year</th>
        </tr>
    </thead>
    <thead class="filters">
        <tr>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
            <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model.OdometerDataList)
        {
            <tr>
                <td>@Html.Raw(data.VehicleType)</td>
                <td>@Html.Raw(data.Region)</td>
                <td>@Html.Raw(data.Function)</td>
                <td>@Html.Raw(data.TotalKm)</td>
                <td>@Html.Raw(data.Month)</td>
                <td>@Html.Raw(data.ReportYear)</td>
            </tr>
        }
    </tbody>
</table>