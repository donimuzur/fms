@using FMS.Core;
@model FMS.Website.Models.DelegationModel
<!-- Main content -->
<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Delegation</h5>
    <a href="@Url.Action("Upload", "MstDelegation")" class="btn btn-primary line" title="Upload & View" ng-click="uploadCom()">
        <i class="fa fa-download"></i> Import
    </a>
    <a href="#!" class="btn btn-primary line" id="btnExport" title="Export To Excel" onclick="ExportXls()">
        <i class="fa fa-upload"></i> Export
    </a>
</div>
<section class="content" ng-controller="MSTCCtrl" ng-init="init()">

    @using (Html.BeginForm("ExportMasterDelegation", "MstDelegation", FormMethod.Post, new { @id = "ExportToXls" }))
    {

    }

    <div class="wpanel">
        <table id="tbDelegation" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Action</th>
                    <th>Employee From</th>
                    <th>Employee To</th>
                    <th>Date From</th>
                    <th>Date To</th>
                    <th>Is Complaint Form</th>
                    <th>Created By</th>
                    <th>Created Date</th>
                    <th>Modified By</th>
                    <th>Modified Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <thead class="filters">
                <tr>
                    <th><a href="@Url.Action("Create","MstDelegation")" class="btn btn-sm btn-success" title="Add New Delegation"><i class="fa fa-plus"> New </i></a></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model.Details)
                {
                    <tr>
                        <td style="text-align: center;">
                            <a href="@Url.Action("Edit", "MstDelegation", new { MstDelegationId = data.MstDelegationID })" title="Edit Data"><i class="fa fa-edit"></i> Edit </a>
                        </td>
                        <td>@Html.Raw(data.NameEmployeeFrom)</td>
                        <td>@Html.Raw(data.NameEmployeeTo)</td>
                        <td>@Html.Raw(data.DateFrom.ToString("dd/MM/yyyy"))</td>
                        <td>@Html.Raw(data.DateTo.ToString("dd/MM/yyyy"))</td>
                        <td>@Html.Raw(data.IsComplaintFrom)</td>
                        <td>@Html.Raw(data.CreatedBy)</td>
                        <td>@Html.Raw(data.CreatedDate.ToString("dd/MM/yyyy hh:mm"))</td>
                        <td>@Html.Raw(data.ModifiedBy)</td>
                        <td>@Html.Raw(data.ModifiedDate.Value.ToString("dd/MM/yyyy hh:mm"))</td>
                        @if (data.IsActive == true)
                        {
                            <td>@Html.Raw("Active")</td>
                        }
                        else
                        {
                            <td>@Html.Raw("Inactive")</td>
                        }
                    </tr>
                }
                @if (Model.Details.Count == 0)
                {
                    <tr>
                        <td colspan="11">No Data Found</td>
                    </tr>
                }

            </tbody>

        </table>

    </div>
    @*<div>
            <ul uib-pagination boundary-links="true" total-items="totalRecords" max-size="5" ng-model="off" class="pagination pull-left" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;" ng-change="paging(off)"></ul>
        </div>*@

    <!-- /.row -->
</section>
<!-- /.content -->

<script type="text/javascript">
      function ExportXls() {
            $('#ExportToXls').submit();
      }

      $(function () {
          // DataTable
          var table = $('#tbDelegation').DataTable({
              "dom": 'lf<"table-overflow"t>pi',
              orderCellsTop: true
          });

          // Apply the search
          table.columns().eq(0).each(function (colIdx) {
              $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                  table
                      .column(colIdx)
                      .search(this.value)
                      .draw();
              });
          });
      });
</script>

