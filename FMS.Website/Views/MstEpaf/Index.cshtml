@using FMS.Core;
@model FMS.Website.Models.EpafModel

<section class="content-header">
    <h1>
        Master Data ePaf
    </h1>
</section>
<section class="content" ng-controller="MSTCCtrl" ng-init="init()">
    <div class="row">
        <div class="col-xs-12">
            <a href="javascript:;" class="btn btn-sm btn-primary" id="btnExport" title="Export To Excel" onclick="ExportXls()"><i class="fa fa-file-excel-o"></i> Export Excel</a>
            @using (Html.BeginForm("ExportMasterEpaf", "MstEpaf", FormMethod.Post, new { @id = "ExportToXls" }))
            {

            }
            <div class="box-header" style="overflow-y: auto;">
                <div class="box" style="overflow-y: auto;">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="tbEpaf" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Document Type</th>
                                    <th>Epaf Action</th>
                                    <th>Employee ID</th>
                                    <th>Employee Name</th>
                                    <th>Cost Center</th>
                                    <th>Effective Date</th>
                                    <th>Group Level</th>
                                    <th>City</th>
                                    <th>Base Town</th>
                                    <th>Expat</th>
                                    <th>Letter Send</th>
                                    <th>Last Update</th>
                                    <th>Created By</th>
                                    <th>Created Date</th>
                                    <th>Modified By</th>
                                    <th>Modified Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <thead class="filters">
                                <tr>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                    <th><input type="text" style="border-radius: 7px; text-align: center; width: 100%" placeholder="Search" /></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in Model.Details)
                                {
                                    <tr>
                                        <td>@Html.Raw(data.DocumentType)</td>
                                        <td>@Html.Raw(data.EpafAction)</td>
                                        <td>@Html.Raw(data.EmployeeId)</td>
                                        <td>@Html.Raw(data.EmployeeName)</td>
                                        <td>@Html.Raw(data.CostCenter)</td>
                                        <td>@Html.Raw(data.EfectiveDate)</td>
                                        <td>@Html.Raw(data.GroupLevel)</td>
                                        <td>@Html.Raw(data.City)</td>
                                        <td>@Html.Raw(data.BaseTown)</td>
                                        <td>@Html.Raw(data.Expat)</td>
                                        <td>@Html.Raw(data.LetterSend)</td>
                                        <td>@Html.Raw(data.LastUpdate)</td>
                                        <td>@Html.Raw(data.CreatedBy)</td>
                                        <td>@Html.Raw(data.CreatedDate.ToString("dd/MM/yyyy hh:mm"))</td>
                                        <td>@Html.Raw(data.ModifiedBy)</td>
                                        <td>@Html.Raw(data.ModifiedDate.Value.ToString("dd/MM/yyyy hh:mm"))</td>
                                        @if (data.IsActive == true)
                                        {
                                            <td>@Html.Raw("Active")</td>
                                        }
                                        else
                                        {
                                            <td>@Html.Raw("Inactive")</td>
                                        }
                                    </tr>
                                }
                                @if (Model.Details.Count == 0)
                                {
                                    <tr>
                                        <td colspan="17">No Data Found</td>
                                    </tr>
                                }

                            </tbody>

                        </table>
                        <div>
                            <ul uib-pagination boundary-links="true" total-items="totalRecords" max-size="5" class="pagination pull-left" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>

                            <br />
                            <label class="pull-right">TOTAL RECORDS : @Html.Raw(Model.Details.Count)</label>
                        </div>

                    </div>

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->

            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
      function ExportXls() {
            $('#ExportToXls').submit();
      }

      $(function () {
          // DataTable
          var table = $('#tbEpaf').DataTable();

          // Apply the search
          table.columns().eq(0).each(function (colIdx) {
              $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                  table
                      .column(colIdx)
                      .search(this.value)
                      .draw();
              });
          });
      });
</script>