@using FMS.Core;
@model FMS.Website.Models.EpafModel
<!-- Main content -->
<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Epaf</h5>
    @*<a href="@Url.Action("Upload", "MstEpaf")" class="btn btn-primary line" title="Upload & View" ng-click="uploadCom()">
        <i class="fa fa-download"></i> Import
    </a>*@
    <a href="#!" class="btn btn-primary line" id="btnExport" title="Export To Excel" onclick="ExportXls()">
        <i class="fa fa-upload"></i> Export
    </a>
</div>
<div id="LoadingModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">
				<div align="center">
					<img src="~/Content/img/loader2.gif" id="imgLoader" style="display:block" />
				</div>
			</div>
		</div>
	</div>
</div>

<section class="content">
    <div class="wpanel">
            @using (Ajax.BeginForm("ListEpaf", "MstEpaf",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contenttable",
                    OnComplete = "setupDataTables",
                    OnBegin = "LoadingShow",
                    OnSuccess = "LoadingHide",
                    OnFailure = "LoadingHide",
                }))
            {

                <div class="row col-md-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_DocumentType">DocumentType</label>
                            @Html.DropDownList("Search_DocumentType", Model.SearchView.DocumentTypeList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.DocumentType)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_EmployeeId">Employee Id</label>
                            @Html.DropDownList("Search_EmployeeId", Model.SearchView.EmployeeIdList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.EmployeeId)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_EmployeeName">Employee Name</label>
                            @Html.DropDownList("Search_EmployeeName", Model.SearchView.EmployeeNameList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.EmployeeName)
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_EpafAction">Epaf Action</label>
                            @Html.DropDownList("Search_EpafAction", Model.SearchView.EpafActionList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.EpafAction)
                        </div>
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_DateFrom">Effective Date From</label>
                            @Html.TextBoxFor(model => model.SearchView.DateFrom, "{0:dd-MMM-yyyy}", new { @class = "form-control date" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="SearchView_DateTo">Effective Date To</label>
                            @Html.TextBoxFor(model => model.SearchView.DateTo, "{0:dd-MMM-yyyy}", new { @class = "form-control date" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Show Data</label>
                            @Html.DropDownListFor(model => model.SearchView.Table, Model.SearchView.TableList, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <button id="btn-filter" type="submit" class="btn btn-primary">Filter</button>
                    <button id="btn-reset" type="button" class="btn btn-default">Reset</button>
                </div>
            }
    </div>
    <div id="contenttable" class="wpanel">
        @Html.Partial("_ListEpaf")
    </div>
</section>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    function LoadingShow() {
        $('#LoadingModal').show();
    }
    function LoadingHide() {
        $('#LoadingModal').hide();
    }
    function ExportXls() {
        console.log('Submitting');
        var url = '@Url.Action("ExportMasterEpaf", "MstEpaf")';
        var getFileUrl = '@Url.Action("GetExcelFile", "MstEpaf")';
        console.log(url);
        var objToUpload =
			{
			    SearchView: {
			        DateFrom: $('#SearchView_DateFrom').val(),
			        DateTo: $('#SearchView_DateTo').val(),
			        EmployeeId: getFunctionStr($('#Search_EmployeeId').val()),
			        EmployeeName: getFunctionStr($('#Search_EmployeeName').val()),
			        DocumentType: getFunctionStr($('#Search_DocumentType').val()),
			        EpafAction: getFunctionStr($('#Search_EpafAction').val())
			    }
			};
        $.ajax({
            url: url,
            data: JSON.stringify(objToUpload),
            contentType: 'application/json; charset=utf-8',
            beforeSend: function () {
                $('#LoadingModal').show();
            },
            success: function (response, status, jqxhr) {
                console.log("DONE");
                window.location = getFileUrl + "?pathFile=" + response;
                $('#LoadingModal').hide();
            },
            error: function (jqhxr) {
                console.log("ERROR");
                console.log(jqhxr.responseText);
                $('#LoadingModal').hide();
            },
            type: 'POST'
        });

    }
    $(document).ready(function () {
        $(".chosen").chosen();
        $('aside').animate({
            scrollTop: $("#MstEpaf").offset().top
        }, 1000);

        if ($('.title-page').html() == 'Master Data Epaf') {
            $('#MstEpafMenu').addClass('active');
        }
        setupDataTables();
        $(document).on('click', '#btn-filter', function () {
            console.log('a');

            $("#SearchView_EmployeeId").val(getFunctionStr($('#Search_EmployeeId').val()));
            $("#SearchView_EmployeeName").val(getFunctionStr($('#Search_EmployeeName').val()));
            $("#SearchView_DocumentType").val(getFunctionStr($('#Search_DocumentType').val()));
            $("#SearchView_EpafAction").val(getFunctionStr($('#Search_EpafAction').val()));
        });

        $(document).on('click', '#btn-reset', function () {
            var todayDate = new Date();
            todayDate.setHours(00, 00, 00, 00);
            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            var todayDatestr = todayDate.getDate() + '-' + (months[todayDate.getMonth()]) + '-' + todayDate.getFullYear();

            var date = new Date();
            date.setDate(1);
            date.setHours(00, 00, 00, 00);
            var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
            var datestr = date.getDate() + '-' + (months[date.getMonth()]) + '-' + date.getFullYear();

            $('#SearchView_DateFrom').val(datestr);
            $('#SearchView_DateTo').val(todayDatestr);

            $('#SearchView_EmployeeId').val('');
            $("#SearchView_EmployeeName").val('');
            $("#SearchView_DocumentType").val('');
            $("#SearchView_EpafAction").val('');
            $("#Search_EmployeeId").val('').trigger('chosen:updated');
            $("#Search_EmployeeName").val('').trigger('chosen:updated');
            $("#Search_DocumentType").val('').trigger('chosen:updated');
            $("#Search_EpafAction").val('').trigger('chosen:updated');

            $("#btn-filter").trigger('click');
        });
    });
    function getFunctionStr(arr) {
        var dataStr = "";
        if (arr.length > 0) {
            dataStr = arr.toString();
        }
        return dataStr;
    }
    function setupDataTables()
    {
        // DataTable
        var table = $('#tbEpaf').DataTable({
            "dom": 'lf<"table-overflow"t>pi',
            orderCellsTop: true
        });

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });
    }

</script>

