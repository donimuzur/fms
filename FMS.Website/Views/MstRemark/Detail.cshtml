@using FMS.Core
@model FMS.Website.Models.RemarkItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Remark Detail</h5>
</div>
<section class="content">
    <div class="wpanel">
    @using (Html.BeginForm("Edit", "MstRemark"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Document Type<span class="red">*</span></label>
                    @Html.HiddenFor(model => model.MstRemarkId)
                    @Html.HiddenFor(model => model.CreatedDate)
                    @Html.HiddenFor(model => model.CreatedBy)
                    @Html.DropDownListFor(model => model.DocumentType, Model.DocumentTypeList, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Remark<span class="red">*</span></label>
                    @Html.TextBoxFor(model => model.Remark, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">RoleType<span class="red">*</span></label>
                    @Html.DropDownListFor(model => model.RoleType, Model.RoleTypeList, new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Status<span class="red">*</span></label>
                    <div class="form-control" disabled = "disabled">
                        @Html.CheckBoxFor(model => model.IsActive, new { @id = "CheckisActive", onclick = "CheckIsActive()", @disabled = "disabled" })
                        @if (Model.IsActive == true)
                        {
                            @Html.Label("Active", new { @id = "lblStatus" })
                        }
                        else
                        {
                            @Html.Label("InActive", new { @id = "lblStatus" })
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@Url.Action("Index", "MstRemark" )" class="btn btn-default">Back</a>
            </div>
        </div>
    }
    </div>
</section>

<script type="text/javascript">
    function CheckIsActive() {
        if (document.getElementById('CheckisActive').checked == true) {
            document.getElementById('lblStatus').innerHTML = "Active";
        }
        else
        {
            document.getElementById('lblStatus').innerHTML = "InActive";
        }
    }
</script>
