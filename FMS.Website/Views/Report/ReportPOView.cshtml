        <div id="myFilter" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm" style="width:50%">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">PO Report Filter</h4>
                    </div>
                    <div class="modal-body">
                        <form method="post" ng-submit="submitForm(filter)">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label">Period</label>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <input type="text" placeholder="From" class="form-control" datepicker="" ng-model="filter.PeriodDate">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" placeholder="To" class="form-control" datepicker="" ng-model="filter.PeriodTo">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label">Employee Name</label>
                                    <input type="text" class="form-control" ng-model="filter.EmployeeName" data-toggle="modal" data-target="#employee">
                                    <input type="hidden" class="form-control" ng-model="filter.EmployeeID">
                                </div>

                                <div class="form-group">
                                    <label class="control-label">Police Number</label>
                                    <input type="text" class="form-control" ng-model="filter.PoliceNumber" data-toggle="modal" data-target="#police">
                                </div>

                                <div class="form-group">
                                    <label class="control-label">Supply Method</label>
                                    <select ng-model="filter.SupplyMethod" class="form-control" id="Vtype">
                                        <option value="Temporary">Temporary</option>
                                        <option value="Lease">Lease</option>
                                        <option value="Extend">Extend</option>
                                        <option value="Services">Services</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-block btn-default btn-lg"><i class="glyphicon glyphicon-filter"></i>&nbsp;Apply Filter</button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

