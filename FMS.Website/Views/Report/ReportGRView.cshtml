                                <td>B-1835-UZY</td>
                                <td>09-Jan-2017</td>
                                <td>18-Jan-2017</td>
                                <td>Rework body repair.PB10</td>
                                <td style="text-align: center;">1</td>
                                <td style="text-align: center;">15</td>
                            </tr>
                            <tr>
                                <td colspan="14"><h4>DATA KOSONG</h4></td>
                            </tr>
                        </tbody>

                    </table>
                </div>

            </div>
            <!-- /.box-body -->
        </div>

        <!-- Modal -->
        <div id="myFilter" class="modal fade" role="dialog">
            <div class="modal-dialog modal-sm">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Auto GR Report Filter</h4>
                    </div>
                    <div class="modal-body">
                        <form method="post" ng-submit="submitForm(filter)">
                            <div class="box-body">

                                <div class="form-group">
                                    <label class="control-label">GR Period</label>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <input type="text" placeholder="From" class="form-control" datepicker="" ng-model="filter.PeriodDate" required>
                                        </div>
                                        <div class="col-md-4">
                                            <input type="text" placeholder="To" class="form-control" datepicker="" ng-model="filter.PeriodTo" required>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-block btn-default"><i class="glyphicon glyphicon-filter"></i>&nbsp;Apply Filter</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </section>

</div>