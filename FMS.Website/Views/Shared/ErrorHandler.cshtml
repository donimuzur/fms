@using FMS.Logger.Models
@model ExceptionInfo
@{
	ViewBag.Title = "Error Handler";
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Error Handler</title>
	<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-3.2.1.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
	<div class="container">
		<br />
		<h1 class="text-danger">@Model.Title</h1>
		<br />
		<table class="table table-striped table-hover">
			<tr>
				<th>Controller</th>
				<td>@Model.ControllerName</td>
			</tr>
			<tr>
				<th>Action</th>
				<td>@Model.ActionName</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>@Model.Message</td>
			</tr>
		</table>
		<br />
		<br />
		@Html.ActionLink("Back to home page","Index","Home",null,new { @class="btn btn-primary" })
	</div>
</body>
</html>
