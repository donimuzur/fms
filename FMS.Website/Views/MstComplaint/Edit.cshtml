@using FMS.Core;
@model FMS.Website.Models.ComplaintCategoryItem

<section class="content-header">
    <h1>
        Master Data Complaint Category Edit
    </h1>
</section>
<section class="content" ng-controller="MSTCCtrl" ng-init="init()">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Edit", "MstComplaint", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="box-header" style="overflow-y: auto;">
                    <div class="box" style="overflow-y: auto;">
                        <div class="box-body">
                            <div class="form-group">
                                <div class="row col-md-12">
                                    <label class="control-label col-sm-2">Category Name <span class="red">*</span></label>
                                    <div class="col-sm-4">
                                       @Html.HiddenFor(model => model.MstComplaintCategoryId)
                                        @Html.HiddenFor(model => model.CreatedBy)
                                        @Html.HiddenFor(model => model.CreatedDate)
                                        @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control " })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row col-md-12">
                                    <label class="control-label col-sm-2">Role Type<span class="red">*</span></label>
                                    <div class="col-sm-6">
                                        @Html.DropDownListFor(model => model.RoleType, Model.RoleTypeList, new { @class = "form-control " })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row col-md-12">
                                    <label class="control-label col-sm-2">Status <span class="red"></span></label>
                                    <div class="form-control">
                                        @Html.CheckBoxFor(model => model.IsActive)
                                        @Html.Label("Active", new { @id = "lblStatus" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success" />
                            <a href="@Url.Action("Index", "MstComplaint" )"><i class="btn btn-primary">Back</i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="changes">
        @Html.Partial("_ChangesLog");
    </div>
</section>
<script type="text/javascript">
</script>