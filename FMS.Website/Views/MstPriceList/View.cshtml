@using FMS.Core;
@model FMS.Website.Models.PriceListItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Price List</h5>
</div>
<section class="content">
    <div class="wpanel">
        @using (Html.BeginForm("Edit", "MstPriceList"))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Manufacture<span class="red"></span></label>
                        @Html.HiddenFor(model => model.MstPriceListId)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.TextBoxFor(model => model.Manufacture,new { @class = "form-control", required = "required", onchange = "GetModels()", @disabled = "disabled" })
                        @* @Html.TextBoxFor(model => model.Manufacture, new { @class = "form-control ", @required = "required" })*@
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Model<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Models, new { @class = "form-control", required = "required", onchange = "GetSeries()", @disabled = "disabled" })
                        @*@Html.TextBoxFor(model => model.Models, new { @class = "form-control ", @required = "required" })*@
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Series<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Series,  new { @class = "form-control", required = "required", @disabled = "disabled" })
                        @* @Html.TextBoxFor(model => model.Series, new { @class = "form-control ", @required = "required" })*@
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Year<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control ", @maxlength = "5", onkeypress = "return IsAngka(event)", @required = "required", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zone Price List<span class="red"></span></label>
                        @Html.TextBoxFor(model => model.ZonePriceList,  new { @class = "form-control", @disabled = "disabled" })
                        @*@Html.TextBoxFor(model => model.ZonePriceList, new { @class = "form-control ", @required = "required" })*@
                    </div>
                </div>
                @*<div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Price<span class="red"></span>*</label>
                        @Html.TextBoxFor(model => model.PriceStr, new { @class = "decimal form-control ", onkeypress = "return IsAngka(event)", @required = "required", @disabled = "disabled" })
                    </div>
                </div>*@
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Installment HMS<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.InstallmenHMSStr, new { @class = "decimal form-control ", onkeypress = "return IsAngka(event)", @required = "required", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Installment Employee<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.InstallmenEMPStr, new { @class = "decimal form-control ", onkeypress = "return IsAngka(event)", @required = "required", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vendor<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Vendor,  new { @class = "form-control", @style = "width: 100%;", required = "required", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vehicle Type<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.VehicleType, new { @class = "form-control", @style = "width: 100%;", onchange = "VehicleTypeChange()", required = "required", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6" id="VehicleUsageDiv" style="visibility:visible">
                    <div class="form-group">
                        <label class="control-label">Vehicle Usage</label>
                        @Html.TextBoxFor(model => model.VehicleUsage, new { @class = "form-control", @style = "width: 100%;", @disabled = "disabled" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Status<span class="red">*</span></label>
                        <div class="form-control" disabled="disabled">
                            @Html.CheckBoxFor(model => model.IsActive, new { @disabled = "disabled" })
                            @Html.Label("Active", new { @id = "lblStatus" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box-body">
                        <a href="@Url.Action("Index", "MstPriceList")"><i class="btn btn-default">Back</i></a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="changes" class="tab-pane">
        @Html.Partial("_ChangesLog");
    </div>
</section>
<script src="~/Scripts/thousand-separator.js"></script>
<script type="text/javascript">

    $('#InstallmenHMSStr').val(ThausandSeperator($('#InstallmenHMSStr').val(), 2));
    $('#InstallmenEMPStr').val(ThausandSeperator($('#InstallmenEMPStr').val(), 2));
    $('#PriceStr').val(ThausandSeperator($('#PriceStr').val(), 2));

    function IsAngka(evt) {
        var charCode = (evt.which);
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        } return true;
    }

    function VehicleTypeChange() {
        if ($("#VehicleType").val().toUpperCase() == "WTC") {
            $("#VehicleUsageDiv").hide();
        }
        else {
            $("#VehicleUsageDiv").show();
        }
    }

    $(document).ready()
    {
        VehicleTypeChange();
    }
</script>