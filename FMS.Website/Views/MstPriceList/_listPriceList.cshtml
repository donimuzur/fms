@using FMS.Core
@model FMS.Website.Models.PriceListModel
<table id="tbPriceList" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="min-width: 50px">Action</th>
            <th>Vendor</th>
            <th>Vehice Type</th>
            <th>Vehice Usage</th>
            <th>Zone Price List</th>
            <th>Manufacture</th>
            <th>Model</th>
            <th>Series</th>
            <th>Request Year</th>
            <th>Monthly Installment HMS</th>
            <th>Monthly Installment EMP</th>
            @*<th>Price</th>*@
            <th>Created By</th>
            <th>Created Date</th>
            <th>Modified By</th>
            <th>Modified Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <thead class="filters">
        <tr>
            @if (Model.CurrentPageAccess.WriteAccess == true && (Model.SearchView.Table == null || Model.SearchView.Table != "2"))
            {
                <th><a href="@Url.Action("Create","MstPriceList")" class="btn btn-primary line"><i class="fa fa-plus" id="myModalLabel"> New</i></a></th>
            }
            else
            {
                <th> &nbsp; </th>
            }
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            <th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>
            @*<th><input style="border-radius: 5px; text-align: center;" type="text" class="form-control" placeholder="search"></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model.Details)
        {
            <tr>
                <td style="text-align: center;">
                    @if (Model.CurrentPageAccess.WriteAccess == true && (Model.SearchView.Table == null || Model.SearchView.Table != "2"))
                    {
                        <a href="@Url.Action("Edit", "MstPriceList", new { @MstPriceListId = data.MstPriceListId })" data-toggle="tooltip" data-placement="top" title="Edit" class="action"><img src="~/Content/images/pin.png" alt="" /></a>
                    }
                    @if (Model.CurrentPageAccess.ReadAccess == true && Model.SearchView.Table == "2")
                    {
                        <a href="@Url.Action("View", "MstPriceList", new { @MstPriceListId = data.MstPriceListId, Archive = true })" data-toggle="tooltip" data-placement="top" title="Detail" class="action"><img src="~/Content/images/search.png" alt="" /></a>
                    }
                    else if (Model.CurrentPageAccess.ReadAccess == true && (Model.SearchView.Table == null || Model.SearchView.Table != "2"))
                    {
                        <a href="@Url.Action("View", "MstPriceList", new { @MstPriceListId = data.MstPriceListId })" data-toggle="tooltip" data-placement="top" title="Detail" class="action"><img src="~/Content/images/search.png" alt="" /></a>
                    }
                </td>
                <td>@Html.Raw(data.VendorName)</td>
                <td>@Html.Raw(data.VehicleType)</td>
                <td>@Html.Raw(data.VehicleUsage)</td>
                <td>@Html.Raw(data.ZonePriceList)</td>
                <td>@Html.Raw(data.Manufacture)</td>
                <td>@Html.Raw(data.Models)</td>
                <td>@Html.Raw(data.Series)</td>
                <td>@Html.Raw(data.Year)</td>
                <td>@Html.Raw(data.InstallmenHMS == 0 ? "0" : string.Format("{0:N0}", data.InstallmenHMS))</td>
                <td>@Html.Raw(data.InstallmenEMP == 0 ? "0" : string.Format("{0:N0}", data.InstallmenEMP))</td>
                @*<td>@Html.Raw(data.Price == 0 ? "0" : string.Format("{0:N0}", data.Price))</td>*@
                <td>@Html.Raw(data.CreatedBy)</td>
                <td>@Html.Raw(data.CreatedDate.ToString("dd-MMM-yyyy"))</td>
                <td>@Html.Raw(data.ModifiedBy)</td>
                <td>@Html.Raw(data.ModifiedDate.HasValue ? data.ModifiedDate.Value.ToString("dd-MMM-yyyy") : "")</td>
                @if (data.IsActive == true)
                {
                    <td>@Html.Raw("Active")</td>
                }
                else
                {
                    <td>@Html.Raw("InActive")</td>
                }
            </tr>
        }

    </tbody>
</table>