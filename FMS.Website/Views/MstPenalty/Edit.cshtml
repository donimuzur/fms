@using FMS.Core;
@model FMS.Website.Models.PenaltyItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Penalty Edit</h5>
</div>
<section class="content">

    <div class="wpanel">
        @using (Html.BeginForm("Edit", "MstPenalty"))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Manufacture<span class="red">*</span></label>
                        @Html.HiddenFor(model => model.MstPenaltyId)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control", @id = "Manufacturer" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Model<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Models, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Series<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Series, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Year<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Month Start<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.MonthStart, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Month End<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.MonthEnd, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Vehicle Type<span class="red">*</span></label>
                        @*@Html.TextBoxFor(model => model.VehicleType, new { @class = "form-control" })*@
                        @Html.DropDownListFor(model => model.VehicleType, Model.VehicleList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Penalty<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Penalty, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Restitution<span class="red">*</span></label>
                        @Html.DropDownListFor(model => model.Restitution, Model.RestitutionList, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label"> <span class="red"> </span></label>
                        @Html.CheckBoxFor(model => model.IsActive)
                        <label class="control-label">Active<span class="red">*</span></label>
                    </div>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "MstPenalty" )" class="btn btn-default">Back</a>
                </div>
            </div>
        }
    </div>
</section>
<script type="text/javascript">
     function IsAngka(evt) {
         var charCode = (evt.which);
         if (charCode > 31 && (charCode < 48 || charCode > 57)) {
             return false;
         } return true;
     }
</script>