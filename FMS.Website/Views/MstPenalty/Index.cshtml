@using FMS.Core;
@model FMS.Website.Models.PenaltyModel
<!-- Main content -->
<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Penalty</h5>
    @if (Model.CurrentPageAccess.UploadAccess == true)
    {
        <a href="@Url.Action("Upload", "MstPenalty")" class="btn btn-primary line" title="Upload & View" ng-click="uploadCom()">
            <i class="fa fa-upload"></i> Import
        </a>
    }
    <a href="#!" class="btn btn-primary line" id="btnExport" title="Export To Excel" onclick="ExportXls()">
        <i class="fa fa-download"></i> Export
    </a>
</div>
<div id="LoadingModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div align="center">
                    <img src="~/Content/img/loader2.gif" id="imgLoader" style="display:block" />
                </div>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="wpanel">
        <div class="row col-md-12">
            @using (Ajax.BeginForm("ListPenalty", "MstPenalty",
                new AjaxOptions
                {
                    HttpMethod = "POST",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "contenttable",
                    OnComplete = "setupDataTables",
                    OnBegin = "LoadingShow",
                    OnSuccess = "LoadingHide",
                    OnFailure = "LoadingHide",
                }))
            {
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_Vendor">Vendor</label>
                            @Html.DropDownList("Search_Vendor", Model.SearchView.VendorList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.Vendor)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_RequestYear">Request Year</label>
                            @Html.DropDownList("Search_RequestYear", Model.SearchView.RequestYearList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.RequestYear)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_Manufacturer">Manufacturer</label>
                            @Html.DropDownList("Search_Manufacturer", Model.SearchView.ManufacturerList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.Manufacturer)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_Model">Model</label>
                            @Html.DropDownList("Search_Model", Model.SearchView.ModelList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.Model)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_Series">Series</label>
                            @Html.DropDownList("Search_Series", Model.SearchView.SeriesList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.Series)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_BodyType">Body Type</label>
                            @Html.DropDownList("Search_BodyType", Model.SearchView.BodyTypeList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.BodyType)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_VehicleType">Vehicle Type</label>
                            @Html.DropDownList("Search_VehicleType", Model.SearchView.VehicleTypeList, new { @class = "form-control chosen", @data_live_search = true, @multiple = "multiple" })
                            @Html.HiddenFor(model => model.SearchView.VehicleType)
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="SearchView_Table">Show Data</label>
                            @Html.DropDownList("Search_Table", Model.SearchView.TableList, new { @class = "form-control" })
                            @Html.HiddenFor(model => model.SearchView.Table)
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="col-md-12">
                    <button id="btn-filter" type="submit" class="btn btn-primary">Filter</button>
                    <button id="btn-reset" type="button" class="btn btn-default">Reset</button>
                </div>
            }
        </div>
    </div>
    <div id="contenttable" class="wpanel">
        @Html.Partial("_ListPenalty")
    </div>
</section>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script type="text/javascript">
    function LoadingShow() {
        $('#LoadingModal').show();
    }
    function LoadingHide() {
        $('#LoadingModal').hide();
    }
    function ExportXls() {
        console.log('Submitting');
        var url = '@Url.Action("ExportMasterPenalty", "MstPenalty")';
        var getFileUrl = '@Url.Action("GetExcelFile", "MstPenalty")';
        console.log(url);
        var objToUpload =
			{
			    SearchView: {
			        Vendor: getFunctionStr($('#Search_Vendor').val()),
			        RequestYear: getFunctionStr($('#Search_RequestYear').val()),
			        Manufacturer: getFunctionStr($('#Search_Manufacturer').val()),
			        Model: getFunctionStr($('#Search_Model').val()),
			        Series: getFunctionStr($('#Search_Series').val()),
			        BodyType: getFunctionStr($('#Search_BodyType').val()),
			        VehicleType: getFunctionStr($('#Search_VehicleType').val()),
			        Table: getFunctionStr($('#Search_Table').val())
			    }
			};
        $.ajax({
            url: url,
            data: JSON.stringify(objToUpload),
            contentType: 'application/json; charset=utf-8',
            beforeSend: function () {
                $('#LoadingModal').show();
            },
            success: function (response, status, jqxhr) {
                console.log("DONE");
                window.location = getFileUrl + "?pathFile=" + response;
                $('#LoadingModal').hide();
            },
            error: function (jqhxr) {
                console.log("ERROR");
                console.log(jqhxr.responseText);
                $('#LoadingModal').hide();
            },
            type: 'POST'
        });
    }

    function setupDataTables() {
        // DataTable
        var table = $('#tbPenalty').DataTable({
            "dom": 'lf<"table-overflow"t>pi',
            orderCellsTop: true
        });

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });
    }

    function getFunctionStr(arr) {
        var dataStr = "";
        if (arr.length > 0) {
            dataStr = arr.toString();
        }
        return dataStr;
    }

    $(function () {

        $(".chosen").chosen();
        if ($('.title-page').html() == 'Master Data Penalty') {
            $('#MstPenaltyMenu').addClass('active');
        }

        // DataTable
        var table = $('#tbPenalty').DataTable({
            "dom": 'lf<"table-overflow"t>pi',
            orderCellsTop: true
        });

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });

        $(document).on('click', '#btn-filter', function () {
            console.log('a');
            $("#SearchView_BodyType").val(getFunctionStr($('#Search_BodyType').val()));
            $("#SearchView_Manufacturer").val(getFunctionStr($('#Search_Manufacturer').val()));
            $("#SearchView_Model").val(getFunctionStr($('#Search_Model').val()));
            $("#SearchView_RequestYear").val(getFunctionStr($('#Search_RequestYear').val()));
            $("#SearchView_Series").val(getFunctionStr($('#Search_Series').val()));
            $("#SearchView_VehicleType").val(getFunctionStr($('#Search_VehicleType').val()));
            $("#SearchView_Vendor").val(getFunctionStr($('#Search_Vendor').val()));
            $("#SearchView_Table").val(getFunctionStr($('#Search_Table').val()));
        });

        $(document).on('click', '#btn-reset', function () {
            $("#SearchView_BodyType").val('');
            $("#SearchView_Manufacturer").val('');
            $("#SearchView_Model").val('');
            $("#SearchView_RequestYear").val('');
            $("#SearchView_Series").val('');
            $("#SearchView_VehicleType").val('');
            $("#SearchView_Vendor").val('');
            $("#SearchView_Table").val('');

            $("#Search_BodyType").val('').trigger('chosen:updated');
            $("#Search_Manufacturer").val('').trigger('chosen:updated');
            $("#Search_Model").val('').trigger('chosen:updated');
            $("#Search_RequestYear").val('').trigger('chosen:updated');
            $("#Search_Series").val('').trigger('chosen:updated');
            $("#Search_VehicleType").val('').trigger('chosen:updated');
            $("#Search_Vendor").val('').trigger('chosen:updated');
            $("#Search_Table").val('').trigger('chosen:updated');

            $("#btn-filter").trigger('click');
        });
    });
</script>
