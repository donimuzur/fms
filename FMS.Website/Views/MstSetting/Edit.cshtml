@using FMS.Core;
@model FMS.Website.Models.SettingItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Setting Edit</h5>
</div>
<section class="content">
    <div class="wpanel">
        <div role="tabpanel">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#information" aria-controls="information" role="tab" data-toggle="tab">Information</a></li>
                <li role="presentation"><a href="#changes" aria-controls="changes" role="tab" data-toggle="tab">Changes logs</a></li>
            </ul>

            <div class="tab-content">
                <div id="information" class="tab-pane active" role="tabpanel">
                    @using (Html.BeginForm("Edit", "MstSetting"))
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Function Group<span class="red">*</span></label>
                                    @Html.HiddenFor(model => model.MstSettingId)
                                    @Html.HiddenFor(model => model.CreatedBy)
                                    @Html.HiddenFor(model => model.CreatedDate)
                                    @Html.TextBoxFor(model => model.SettingGroup, new { @class = "form-control " })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Function Name<span class="red">*</span></label>
                                    @Html.TextBoxFor(model => model.SettingName, new { @class = "form-control " })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Function Value<span class="red">*</span></label>
                                    @Html.TextBoxFor(model => model.SettingValue, new { @class = "form-control " })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Active<span class="red">*</span></label>
                                    @Html.CheckBoxFor(model => model.IsActive, new { @class = "form-control " })
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <div class="box-body">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a href="@Url.Action("Index", "MstSetting")"><i class="btn btn-default">Back</i></a>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div id="changes" class="tab-pane">
                    @Html.Partial("_ChangesLog");
                </div>
            </div>
        </div>
    </div>
</section>


