@using FMS.Core
@model FMS.Website.Models.LocationMappingItem

<div class="opt-content clearfloat">
    <h5 class="title-page">Master Data Location Mapping Create</h5>
</div>
<section class="content">
    <div class="wpanel">
        <label class="label-warning">@Model.ErrorMessage</label>
        @using (Html.BeginForm("Create", "MstLocationMapping"))
        {
            <div class="row col-md-12">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Location<span class="red">*</span></label>
                        @Html.DropDownListFor(model => model.Location, Model.LocationList,"-- Please Select --", new { @class = "form-control",@required = "required", onChange= "GetAddressList()" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Address<span class="red">*</span></label>
                        @Html.DropDownListFor(model => model.Address, Model.AddressList, "-- Please Select --", new { @class = "form-control", @required = "required", onChange= "GetBasetown()" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Basetown<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Basetown, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Region<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.Region, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zone Sales<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.ZoneSales, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zone Price List<span class="red">*</span></label>
                        @Html.TextBoxFor(model => model.ZonePriceList, new { @class = "form-control", @required = "required" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Validity From<span class="red">*</span></label>
                        <div class="input-group date">
                            @Html.TextBoxFor(model => model.ValidFrom, "{0:dd-MMM-yyyy}", new { @class = "form-control", @required = "required" })
                            <span class="input-group-addon btn btn-primary">
                                <i class="fa fa-calendar "></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index", "MstLocationMapping" )" class="btn btn-default">Back</a>
                </div>
            </div>
        }
    </div>
</section>
<script type="text/javascript">
    function GetAddressList() {
        if ($("#Location").length) {
            var Location = $("#Location option:selected").text();
            $('#Address option').remove();
            $('#Basetown').val('')
            if (Location == '' || $('#Location').find("option:selected").val() == '') {
                $('#Address option').append('<option value="">--Please Select--</option>');
            }
            else {
                $.ajax({
                    url: '@Url.Action("GetAddressList", "MstLocationMapping")',
                    type: "POST",
                    dataType: "JSON",
                    data: { Location: Location },
                    success: function (list) {
                        $('#Address').append('<option value="">Select</option>');
                        if (list.length > 0) {
                            for (var i = 0; i < list.length; i++) {
                                $('#Address').append('<option value=' + list[i].ADDRESS.toString() + '>' + list[i].ADDRESS.toString() + '</option>');
                            }
                        }
                        else {
                            $('#Basetown').val('')
                        }

                    },
                    complete: function (data) {
                        GetBasetown();
                    }
                });
            }
        }
    }

    function GetBasetown() {
        var Location = $("#Location option:selected").text();
        var Address = $("#Address option:selected").text();
        alert(Location+ Address);
        $.ajax({
            url: '@Url.Action("GetBaseTown", "MstLocationMapping")',
            type: "POST",
            dataType: "JSON",
            data: { Location: Location, Address: Address },
            success: function (response) {
                $('#Basetown').val(response);
            }
        });
    }
</script>