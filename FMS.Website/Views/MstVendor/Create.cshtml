@using FMS.Core;
@model FMS.Website.Models.VendorItem

<section class="content-header">
    <h1>
        Master Data Vendor Create
    </h1>
</section>
<section class="content" ng-controller="MSTCCtrl" ng-init="init()">

    <div class="row">
        <div class="col-xs-12" >
            <div class="box" style="overflow-y: auto;">
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        @using (Html.BeginForm("Create","MstVendor"))
                        {
                        <div class="form-box">
                            <div class="panel-body ">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-4">Vendor Name<span class="red">*</span></label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control " })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-4">Short Name<span class="red">*</span></label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.ShortName,  new { @class = "form-control "})
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row">
                                            <label class="col-md-4">Email Address<span class="red">*</span></label>
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control " })
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="form-box">
                            <div class="panel-body">
                                <div class="Row">
                                    <input type="submit" value="Save" class="btn bg-blue" />
                                    <a href="@Url.Action("Index", "MstVendor" )" class="btn bg-gray">Back</a>
                                </div>
                            </div>
                        </div>
                        }
                        <!-- /.box-body -->
                    </div>
                <!-- /.box -->
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</section>
