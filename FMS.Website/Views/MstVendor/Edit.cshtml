@using FMS.Core;
@model FMS.Website.Models.VendorItem

<section class="content-header">
    <h1>
        Master Data Vendor Edit
    </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
        @using (Html.BeginForm("Edit", "MstVendor"))
        {
            <div class="box-header" style="overflow-y: auto;">
                <div class="box" style="overflow-y: auto;">
                    <div class="box-body">
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-4">Vendor Name<span class="red">*</span></label>
                                <div class="col-md-8">
                                    @Html.HiddenFor(model => model.MstVendorId)
                                    @Html.HiddenFor(model => model.CreatedBy)
                                    @Html.HiddenFor(model => model.CreatedDate)
                                    @Html.TextBoxFor(model => model.VendorName, new { @class = "form-control " })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-4">Short Name<span class="red">*</span></label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.ShortName,  new { @class = "form-control "})
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                <label class="col-md-4">Email Address<span class="red">*</span></label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control " })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="box-body">
                        <input type="submit" value="Save" class="btn bg-blue " />
                        <a href="@Url.Action("Index", "MstVendor" )"><i class="btn bg-gray">Back</i></a>
                    </div>
                </div>
            </div>        
        }
        </div>
    </div>
</section>